# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Etherscan Configuration  
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Database Configuration (MySQL/phpMyAdmin)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=contractguard

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration (Add your deployed frontend URL)
ALLOWED_ORIGINS=https://papaya-seahorse-ebcc5a.netlify.app,http://localhost:5173

# Hardhat Deployment Configuration
PRIVATE_KEY=your_wallet_private_key_here
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id
POLYGON_RPC_URL=https://polygon-rpc.com

# Blockchain Explorer API Keys for Verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key

# Gas Reporting (optional)
REPORT_GAS=true

